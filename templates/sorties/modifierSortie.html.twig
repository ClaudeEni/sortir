{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
    <link href="../../assets/styles/creer-sortie.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="form-custom form w-100 m-auto text-center" style="padding-bottom: 30px">
        <h2>Modifier une sortie :</h2><br>

        {{ form_start(modifierSortieForm) }}

        <div>
            <label for="sortie_nom">Nom de la sortie :</label>
            {{ form_widget(modifierSortieForm.nom, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.nom) }}
        </div><br>

        <div>
            <label for="sortie_dateHeureDebut">Date et heure de la sortie :</label>
            {{ form_widget(modifierSortieForm.dateHeureDebut, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.dateHeureDebut) }}
        </div><br>

        <div>
            <label for="sortie_dateLimiteInscription">Date limite d'inscription :</label>
            {{ form_widget(modifierSortieForm.dateLimiteInscription, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.dateLimiteInscription) }}
        </div><br>

        <div>
            <label for="sortie_nbInscriptionsMax">Nombre de places :</label>
            {{ form_widget(modifierSortieForm.nbInscriptionsMax, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.nbInscriptionsMax) }}
        </div><br>

        <div>
            <label for="sortie_duree">Dur√©e de la sortie :</label>
            {{ form_widget(modifierSortieForm.duree, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.duree) }}
        </div><br>

        <div>
            <label for="sortie_infosSortie">Description et informations :</label>
            {{ form_widget(modifierSortieForm.infosSortie, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.infosSortie) }}
        </div><br>

        <div>
            <label for="sortie_campus">Campus :</label>
            <div style="font-weight: bold">{{ user.campus }}</div>

        </div><br>

        <div>
            <label for="sortie_ville">Ville :</label>
            {{ form_widget(modifierSortieForm.ville, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.ville) }}
        </div><br>

        <div>
            <label for="sortie_lieu">Lieu :</label>
            {{ form_widget(modifierSortieForm.lieu, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(modifierSortieForm.lieu) }}
        </div>



        <br><br>

            <div>
                {{ form_widget(modifierSortieForm.enregistrer, {'attr': {'class': 'btn btn-success'}}) }}

                {{ form_widget(modifierSortieForm.publier, {'attr': {'class': 'btn btn-primary'}}) }}

                <a href="{{ path('sorties_supprimerSortie', {id:sortie.id}) }}" class="btn btn-danger">Supprimer la sortie</a>

                <a href="{{path('sorties_list')}}" class="btn btn-warning">Annuler</a>
            </div>

            {{ form_end(modifierSortieForm) }}

    </main>
{% endblock %}