{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <div>
        <h2>Modifier une sortie :</h2>

        {{ form_start(modifierSortieForm) }}

        <div>
            <label for="sortie_nom" class="input-group-text">Nom de la sortie :</label>
            {{ form_widget(modifierSortieForm.nom) }}
            {{ form_errors(modifierSortieForm.nom) }}
        </div>

        <div>
            <label for="sortie_dateHeureDebut" class="input-group-text">Date et heure de la sortie :</label>
            {{ form_widget(modifierSortieForm.dateHeureDebut) }}
            {{ form_errors(modifierSortieForm.dateHeureDebut) }}
        </div>

        <div>
            <label for="sortie_dateLimiteInscription" class="input-group-text">Date limite d'inscription :</label>
            {{ form_widget(modifierSortieForm.dateLimiteInscription) }}
            {{ form_errors(modifierSortieForm.dateLimiteInscription) }}
        </div>

        <div>
            <label for="sortie_nbInscriptionsMax" class="input-group-text">Nombre de places :</label>
            {{ form_widget(modifierSortieForm.nbInscriptionsMax) }}
            {{ form_errors(modifierSortieForm.nbInscriptionsMax) }}
        </div>

        <div>
            <label for="sortie_duree" class="input-group-text">Dur√©e de la sortie :</label>
            {{ form_widget(modifierSortieForm.duree) }}
            {{ form_errors(modifierSortieForm.duree) }}
        </div>

        <div>
            <label for="sortie_infosSortie" class="input-group-text">Description et informations :</label>
            {{ form_widget(modifierSortieForm.infosSortie) }}
            {{ form_errors(modifierSortieForm.infosSortie) }}
        </div>

        <div>
            <label for="sortie_campus" class="input-group-text">Campus :</label>
            {{ user.campus }}

        </div>

        <div>
            <label for="sortie_ville" class="input-group-text">Ville :</label>
            {{ form_widget(modifierSortieForm.ville) }}
            {{ form_errors(modifierSortieForm.ville) }}
        </div>

        <div>
            <label for="sortie_lieu" class="input-group-text">Lieu :</label>
            {{ form_widget(modifierSortieForm.lieu) }}
            {{ form_errors(modifierSortieForm.lieu) }}
        </div>

        <div>
            {{ form_widget(modifierSortieForm.enregistrer) }}
        </div>

        <div>
            {{ form_widget(modifierSortieForm.publier) }}
        </div>

        <div>
            <a href="{{path('sorties_list')}}" class="btn btn-secondary">Supprimer la sortie</a>
        </div>

        <div>
            <a href="{{path('sorties_list')}}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(modifierSortieForm) }}

    </div>
{% endblock %}