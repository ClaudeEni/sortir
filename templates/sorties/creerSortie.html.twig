{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
    <link href="../../assets/styles/creer-sortie.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="form-custom form w-100 m-auto text-center" style="padding-bottom: 30px">
        <h2>{% if modifier is defined %}Modifier{% else %}Créer{% endif %} une sortie :</h2><br>

        {{ form_start(creerSortieForm) }}

        <div>
            <label for="sortie_nom">Nom de la sortie :</label>
            {{ form_widget(creerSortieForm.nom, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.nom) }}
        </div><br>

        <div>
            <label for="sortie_dateHeureDebut">Date et heure de la sortie :</label>
            {{ form_widget(creerSortieForm.dateHeureDebut, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.dateHeureDebut) }}
        </div><br>

        <div>
            <label for="sortie_dateLimiteInscription">Date limite d'inscription :</label>
            {{ form_widget(creerSortieForm.dateLimiteInscription, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.dateLimiteInscription) }}
        </div><br>

        <div>
            <label for="sortie_nbInscriptionsMax">Nombre de places :</label>
            {{ form_widget(creerSortieForm.nbInscriptionsMax, {'attr': {'class': 'input-group-text w-25 m-auto text-center', 'min':'0'}}) }}
            {{ form_errors(creerSortieForm.nbInscriptionsMax) }}
        </div><br>

        <div>
            <label for="sortie_duree">Durée de la sortie :</label>
            {{ form_widget(creerSortieForm.duree, {'attr': {'class': 'input-group-text w-25 m-auto text-center', 'min':'1'}}) }}
            {{ form_errors(creerSortieForm.duree) }}
        </div><br>

        <div>
            <label for="sortie_infosSortie">Description et informations :</label>
            {{ form_widget(creerSortieForm.infosSortie, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.infosSortie) }}
        </div><br>

        <div>
            <label for="sortie_campus">Campus :</label>
            <div style="font-weight: bold">{{ user.campus }}</div>
        </div><br>

        <div>
            <label for="sortie_ville">Ville :</label>
            {{ form_widget(creerSortieForm.ville, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.ville) }}
        </div><br>

        <div>
            <label for="sortie_lieu">Lieu :</label>
            {{ form_widget(creerSortieForm.lieu, {'attr': {'class': 'input-group-text w-25 m-auto text-center'}}) }}
            {{ form_errors(creerSortieForm.lieu) }}
        </div><br>

        <div>
            <label for="sortie_rue">Rue :</label>
            <div id="sortie_rue" style="font-weight: bold"></div>
        </div><br>

        <div>
            <label for="sortie_cp">Code postal :</label>
            <div id="sortie_cp" style="font-weight: bold"></div>
        </div><br>

        <div>
            <label for="sortie_latitude">Latitude :</label>
            <div id="sortie_latitude" style="font-weight: bold"></div>
        </div><br>

        <div>
            <label for="sortie_longitude">Longitude :</label>
            <div id="sortie_longitude" style="font-weight: bold"></div>
        </div><br>

        <br><br>

        <div>
            {{ form_widget(creerSortieForm.enregistrer, {'attr': {'class': 'btn btn-success'}}) }}

            {{ form_widget(creerSortieForm.publier, {'attr': {'class': 'btn btn-primary'}}) }}

            {% if modifier is defined %}
                <a href="{{ path('sorties_supprimerSortie', {id:sortie.id}) }}" class="btn btn-danger">Supprimer la sortie</a>
            {% endif %}

            <a href="{{path('sorties_list')}}" class="btn btn-warning">Annuler</a>
        </div>

        {{ form_end(creerSortieForm) }}

    </main>
{% endblock %}

{% block javascripts %}
    <script>
        window.onload = () => {
            // On va chercher la ville
            let ville = document.querySelector("#creer_sortie_ville");
            let lieu = document.querySelector("#creer_sortie_lieu");

            changerLieu();

            ville.addEventListener("change", function (){

                fetch("{{ app.request.basePath }}"+"/api/recupVille/"+ville.value
                )
                    .then(response => response.json())
                    .then(json => {
                        let options = '<option value="">Veuillez choisir un lieu</option>'
                            json.map(lieu => {
                                options += `<option value="${lieu.id}"
                                data-rue="${lieu.rue}"
                                data-codepostal="${lieu.ville.codePostal}"
                                data-latitude="${lieu.latitude}"
                                data-longitude="${lieu.longitude}"
                                >${lieu.nom}</option>`
                            })
                        document.querySelector("#creer_sortie_lieu").innerHTML = options;
                    })
            });


            lieu.addEventListener("change", changerLieu);

            function changerLieu(){
                const lieuSelected = lieu.options[lieu.selectedIndex];
                document.querySelector("#sortie_rue").innerHTML = lieuSelected.dataset.rue;
                document.querySelector("#sortie_cp").innerHTML = lieuSelected.dataset.codepostal;
                document.querySelector("#sortie_latitude").innerHTML = lieuSelected.dataset.latitude;
                document.querySelector("#sortie_longitude").innerHTML = lieuSelected.dataset.longitude;
            }
        }
    </script>
{% endblock %}


